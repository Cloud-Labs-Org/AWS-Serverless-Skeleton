{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/*"
      ],
      "@test/*": [
        "spec/*"
      ]
    },
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "rootDirs": [
    "src",
    "spec"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".serverless",
    "spec"
  ]
}
